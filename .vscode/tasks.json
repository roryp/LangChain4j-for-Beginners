{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start MCP Everything Server",
            "type": "shell",
            "command": "node",
            "args": [
                "dist/streamableHttp.js"
            ],
            "options": {
                "cwd": "${workspaceFolder}/../servers/src/everything"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*starting.*$",
                    "endsPattern": "^.*Server listening.*$|^.*Listening on.*$|^.*ready.*$"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Build MCP Git Docker Image",
            "type": "shell",
            "command": "docker",
            "args": [
                "build",
                "-t",
                "mcp/git",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/../servers/src/git"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
