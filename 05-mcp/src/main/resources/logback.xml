<configuration debug="false">
    <!-- Suppress logback status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    
    <!-- Console appender with minimal output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress MCP client debug logs -->
    <logger name="dev.langchain4j.mcp" level="WARN"/>
    <logger name="MCP" level="WARN"/>
    
    <!-- Suppress agentic framework internal logs -->
    <logger name="dev.langchain4j.agentic" level="WARN"/>
    <logger name="dev.langchain4j" level="WARN"/>
    
    <!-- Root logger - suppress INFO from libraries -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
